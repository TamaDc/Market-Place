<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tamadc.marketplace.MainActivity">

    <EditText
        android:id="@+id/Name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/total1"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_below="@+id/Name"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Hargai"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="79dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="154dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="148dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/menu1"
        android:layout_width="154dp"
        android:layout_height="45dp"
        android:text="CHOOSE IMAGE"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="322dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:text="ADD"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="155dp"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/list"
        android:layout_alignRight="@+id/total1"
        android:layout_alignEnd="@+id/total1" />

    <Button
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="FODD LIST"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/menu1"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Keterangan bahan"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/kualitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/keterangan"
        android:layout_alignStart="@+id/keterangan"
        android:layout_below="@+id/keterangan"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Kualitas Bahan"
        android:inputType="textPersonName" />

</RelativeLayout>
